<main>
  <h2>
  <%= @article.title %>
  <%= link_to edit_article_path do %><i class="fa-solid fa-pencil"></i><% end %>
  <%= link_to article_path(@article), data: { turbo_method: :delete, turbo_confirm: 'Are you sure you want to delete this article?' } do %><i class="fa-solid fa-trash-can"></i><% end %>
  </h2>
  <p><%= @article.content %></p>
  <%= link_to 'Back to articles', articles_path %>
</main>
