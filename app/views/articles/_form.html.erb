<%= form_with model: @article do |f| %>
  <div class='form-element'>
    <div class="form-label">
      <%= f.label :title %>
    </div>
    <div class="form-input">
      <%= f.text_field :title, size: '60x20' %>
    </div>
  </div>
  <div class='form-element'>
    <div class="form-label">
      <%= f.label :content %>
    </div>
    <div class="form-input">
     <%= f.text_field :content, size: '60x20' %>
    </div>
  </div>
  <div class='form-element'>
    <%= f.submit %>
  </div>
<% end %>
